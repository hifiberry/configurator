{
    "systemd": {
        "shairport": "all",
        "raat": "all",
        "mpd": "all",
        "squeezelite": "all",
        "librespot": "all"
    },
    "filesystem": {
        "allowed_symlink_destinations": [
            "/var/lib/mpd/music/"
        ],
        "allowed_exists_check_destinations": [
            "/etc"
        ]
    },
    "scripts": {
        "resetsystem": {
            "name": "Reset System Configuration",
            "path": "/usr/sbin/hifiberry-baseconfig",
            "args": ["--force"],
            "description": "Reset system to base configuration"
        }
    }
}
